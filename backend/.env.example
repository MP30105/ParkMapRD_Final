# ParkMapRD Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=5000
NODE_ENV=development

# Security - JWT Secret (REQUIRED)
# Generate a strong random secret: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=supersecretjwt_change_in_production

# Camera Token for IoT devices (REQUIRED)
CAMERA_TOKEN=CAMERA_SECRET_123_change_in_production

# Admin Credentials (Optional - defaults will be used if not set)
MAIN_ADMIN_PASS=mainpass
ADMIN_PASS=adminpass
DEMO_USER_PASS=testpass

# Stripe Payment Integration (REQUIRED for payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email Configuration (Gmail example)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=Parkmaprd <noreply@parkmaprd.com>

# CORS Configuration (Required for production)
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000

# Application URLs
APP_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=5

# Database Configuration (Optional - uses defaults)
DB_PATH=./data/parkmaprd.sqlite

# Logging Configuration (Optional)
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Feature Flags (Optional)
ENABLE_AUTO_CHECKOUT=true
ENABLE_PROMOTIONS=true
ENABLE_WEBSOCKETS=true

# Git Commit Hash (Auto-populated by CI/CD)
GIT_COMMIT=

# Notes:
# - Never commit the actual .env file to version control
# - Use strong, unique secrets for production
# - Rotate secrets regularly
# - Keep backups of production secrets in a secure location
